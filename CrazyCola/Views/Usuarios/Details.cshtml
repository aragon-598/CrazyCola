@model CrazyCola.Models.Usuario

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Details</h2>

            <div>
                <h4>Usuario</h4>
                <hr />
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Nombre)
                        </td>
                    </tr>

                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Apellido)
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Apellido)
                        </td>
                    </tr>

                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Email)
                        </td>
                    </tr>

                    <!-- Consider removing this password field for security -->
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Contrasenia)
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Contrasenia)
                        </td>
                    </tr>

                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IsAdmin)
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.IsAdmin)
                        </td>
                    </tr>

                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Almacen.Nombre)
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Almacen.Nombre)
                        </td>
                    </tr>
                </table>
            </div>

            <div>
                @Html.ActionLink("Edit", "Edit", new { id = Model.UsuarioId }, new { @class = "btn btn-primary mr-2" })
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div>

