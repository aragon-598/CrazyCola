@model CrazyCola.Models.AlmacenProducto

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Create</h2>
        </div>
    </div>

    @using (Html.BeginForm("Create", "AlmacenProducto", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" })) 
    {
        @Html.AntiForgeryToken()
    
        <div class="row mt-3">
            <div class="col-md-12">
                <h4>AlmacenProducto</h4>
                <hr />
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

        <div class="form-group row">
            @Html.LabelFor(model => model.AlmacenId, "AlmacenId", htmlAttributes: new { @class = "col-form-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("AlmacenId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AlmacenId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.ProductoId, "ProductoId", htmlAttributes: new { @class = "col-form-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ProductoId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProductoId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Stock, "Stock", htmlAttributes: new { @class = "col-form-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Stock, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i> Create
                </button>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-12">
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fa fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>